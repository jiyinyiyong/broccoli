
*
  box-shadow none

body
  position absolute
  height 100%
  width 100%
  display -webkit-flex
  -webkit-flex-direction row
  font-family Marcellus, "wenquanyi micro hei"

#menu
  width 400px
  height 100%
  padding 100px 50px

  #search
    width 300px

#table
  width 800px
  height 100%
  overflow-y scroll

  .card
    padding 20px 40px
    line-height 40px

    .tags
      font-family Monaco

      .tag
        width auto
        padding 0px 8px
        color hsl(240,80,70)

    &>*
      margin 4px 0px

#popup
  position absolute
  left 0px
  width 100%
  height 100%
  background hsla(142, 26, 20,0.9)
  display none

  #paper
    width 900px
    height 100%
    background hsl(0,0,100)
    margin 0px auto
    padding 30px 20px 200px
    overflow-y scroll

    .auth
      padding 40px

input
  box-shadow 0 0 3px hsl(40,80,40)
  height 30px
  font-size 16px
  line-height 30px
  padding 0px 6px

textarea
  box-shadow 0 0 3px hsl(40,80,40)
  min-height 300px
  height auto

.button
  display inline-block
  min-width 80px
  padding 0px 10px
  height 30px
  line-height 30px
  font-size 15px
  text-align center
  background hsl(50,80,92)
  border-radius 3px

.vertical-list
  display -webkit-flex
  -webkit-flex-direction column
  
  &>*
    margin 10px 0px

.horizontal
  display -webkit-flex
  -webkit-flex-direction row
  
  &>*
    margin-right 10px